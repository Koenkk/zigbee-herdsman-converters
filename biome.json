{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 150,
        "bracketSpacing": false
    },
    "linter": {
        "rules": {
            "style": {
                "noNonNullAssertion": "off"
            },
            "performance": {
                "noDelete": "off"
            }
        }
    }
}
