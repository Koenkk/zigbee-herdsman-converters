{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es2018",
      "lib": ["es2018"],
      "noImplicitAny": true,
      "noImplicitThis": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true,
      "outDir": ".",
      "baseUrl": ".",
      "resolveJsonModule": true,
      "incremental": true
    },
    "include": ["./src/"],
    "exclude": []
  }
