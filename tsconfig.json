{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "module": "ES2022",
      "esModuleInterop": true,
      "target": "ES2022",
      "lib": ["ES2022"],
      "noImplicitAny": true,
      "noImplicitThis": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true,
      "outDir": ".",
      "baseUrl": ".",
      "resolveJsonModule": true,
      "incremental": true
    },
    "include": ["./src/"],
    "exclude": []
  }
